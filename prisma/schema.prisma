generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum ExperimentStatus {
  DRAFT
  QUEUED
  RUNNING
  COMPLETED
  FAILED
}

enum SkillLevel {
  NOVICE
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

// ─── NextAuth Models ────────────────────────────────────────────────

model User {
  id                  String             @id @default(cuid())
  email               String             @unique
  emailVerified       DateTime?
  name                String?
  image               String?
  role                Role               @default(USER)
  organization        String?
  onboardingCompleted Boolean            @default(false)
  createdAt           DateTime           @default(now())
  updatedAt           DateTime           @updatedAt

  accounts            Account[]
  sessions            Session[]
  aiSettings          AISettings?
  projects            Project[]
  experiments         Experiment[]
  learningProgress    LearningProgress[]
  quizResults         QuizResult[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ─── Application Models ─────────────────────────────────────────────

model AISettings {
  id              String  @id @default(cuid())
  userId          String  @unique
  anthropicApiKey String? @db.Text
  modelId         String  @default("claude-sonnet-4-5-20250929")
  temperature     Float   @default(0.7)
  maxTokens       Int     @default(4096)
  topP            Float   @default(1.0)
  topK            Int     @default(0)
  enableStreaming  Boolean @default(true)
  enableCaching   Boolean @default(false)
  learningMode    String  @default("socratic")
  learnerType     String  @default("HANDS_ON")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Project {
  id            String       @id @default(cuid())
  name          String
  description   String?      @db.Text
  targetProtein String?
  indication    String?
  modality      String?
  visibility    String       @default("private")
  userId        String
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  experiments Experiment[]
}

model Experiment {
  id         String           @id @default(cuid())
  name       String
  status     ExperimentStatus @default(DRAFT)
  projectId  String?
  parameters Json?
  config     Json?
  goal       String?          @db.Text
  userId     String
  createdAt  DateTime         @default(now())
  updatedAt  DateTime         @updatedAt

  user    User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  project Project?        @relation(fields: [projectId], references: [id], onDelete: SetNull)
  runs    ExperimentRun[]
}

model ExperimentRun {
  id           String           @id @default(cuid())
  experimentId String
  status       ExperimentStatus @default(QUEUED)
  logs         Json?
  metrics      Json?
  outputFiles  Json?
  startedAt    DateTime?
  completedAt  DateTime?
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt

  experiment Experiment @relation(fields: [experimentId], references: [id], onDelete: Cascade)
}

model LearningProgress {
  id               String     @id @default(cuid())
  userId           String
  moduleId         String
  conceptsExplored String[]
  questionsAsked   Int        @default(0)
  insightsUnlocked String[]
  skillLevel       SkillLevel @default(NOVICE)
  lastQuizScore    Int?
  lastQuizAt       DateTime?
  exercisesCompleted String[]
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, moduleId])
}

model QuizResult {
  id        String   @id @default(cuid())
  userId    String
  moduleId  String
  score     Int
  totalQs   Int
  answers   Json
  skillTier String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, moduleId])
}
